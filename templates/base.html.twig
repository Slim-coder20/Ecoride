<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}EcoRide
			{% endblock %}
		</title>

		<!-- Bootstrap + FontAwesome -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
		<link
		rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

		<!-- Webpack Encore CSS -->
		{{ encore_entry_link_tags('app_styles') }}
		{{ encore_entry_link_tags('app') }}

		{% block stylesheets %}{% endblock %}
	</head>

	<body>

		<!-- Barre de navigation -->
		<nav class="navbar navbar-expand-lg">
			<div class="container">
				<a class="navbar-brand text-white fw-bold" href="{{ path('app_home') }}">
					<i class="fa-solid fa-car"></i>
					EcoRide
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse justify-content-end" id="navbarNav">
					<ul class="navbar-nav ms-auto">
						<li class="nav-item">
							<a class="nav-link text-white" href="{{ path('app_home') }}">Accueil</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-white" href="{{ path('app_search') }}">Covoiturage</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-white" href="{{ path('app_contact') }}">Contact</a>
						</li>
						{% if app.user %}
							<li class="nav-item">
								<a class="nav-link text-white" href="{{ path('app_logout') }}">
									<i class="fas fa-sign-out-alt"></i>
									Déconnexion
								</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link text-white" href="{{ path('app_login') }}">
									<i class="fas fa-user"></i>
									Connexion
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-white" href="{{ path('app_registration') }}">
									<i class="fas fa-user-plus"></i>
									Inscription
								</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>
		<!-- Messages Flash -->
		<div class="container mt-3">
			{% for type, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
						{{ message }}
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				{% endfor %}
			{% endfor %}
		</div>
		<!-- Messages Flash -->
		<div class="container mt-3">
			{% for type, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
						{{ message }}
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				{% endfor %}
			{% endfor %}
		</div>
		<!-- Contenu de la page -->
		<div class="container mt-4"> {% block body %}{% endblock %}
			</div>

			<!-- Pied de page -->
			<footer class="bg-dark text-white text-center py-4 mt-5">
				<div class="row">
					<div class="col-md-4">
						<h5 class="fw-bold">
							<i class="fa-solid fa-car"></i>
							EcoRide</h5>
						<hr>
						<p class="my-5">&copy; 2025 EcoRide. Tous droits réservés.</p>
					</div>
					<div class="col-md-4">
						<h5 class="fw-bold">Liens rapides</h5>
						<ul class="list-unstyled">
							<li>
								<a href="{{ path('app_home') }}" class="text-white text-decoration-none">Accueil</a>
							</li>
							<li>
								<a href="#" class="text-white text-decoration-none">Rechercher un trajet</a>
							</li>
							<li>
								<a href="#" class="text-white text-decoration-none">Proposer un trajet</a>
							</li>
							<li>
								<a href="#" class="text-white text-decoration-none">Contact</a>
							</li>
						</ul>
					</div>
					<div class="col-md-4">
						<h5 class="fw-bold">Contact</h5>
						<p>
							<i class="fas fa-map-marker-alt"></i>
							123 Rue de Charonne, 75011 Paris</p>
						<p>
							<i class="fas fa-phone"></i>
							+33 1 23 45 67 89</p>
						<p>
							<i class="fas fa-envelope"></i>
							contact.ecoride9@gmail.com</p>
					</div>
				</div>
				<div class="row mt-3">
					<div class="col text-center">
						<a href="#" class="text-white text-decoration-none me-3">Mentions légales</a>
						<a href="#" class="text-white text-decoration-none me-3">Politique de confidentialité</a>
						<a href="#" class="text-white text-decoration-none">CGU</a>
					</div>
				</div>
			</footer>

			<!-- Bootstrap JS -->
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

			<!-- Webpack Encore JS -->
			{{ encore_entry_script_tags('app') }}
			{% block javascripts %}{% endblock %}

		</body>
	</html>

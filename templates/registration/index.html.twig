{% extends 'base.html.twig' %}

{% block title %}Inscription | EcoRide
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<h2 class="text-center">Créer un compte</h2>
				<p class="text-center">Rejoignez-nous et commencez à partager vos trajets en covoiturage !</p>

				<!-- Affichage des messages flash -->
				{% for message in app.flashes('success') %}
					<div class="alert alert-success">{{ message }}</div>
				{% endfor %}
				{% for message in app.flashes('error') %}
					<div class="alert alert-danger">{{ message }}</div>
				{% endfor %}

				<div class="card shadow p-4">
					{{ form_start(registerForm) }}

					<div class="mb-3">
						{{ form_label(registerForm.firstName) }}
						{{ form_widget(registerForm.firstName, {'attr': {'class': 'form-control'}}) }}
					</div>

					<div class="mb-3">
						{{ form_label(registerForm.lastName) }}
						{{ form_widget(registerForm.lastName, {'attr': {'class': 'form-control'}}) }}
					</div>

					<div class="mb-3">
						{{ form_label(registerForm.email) }}
						{{ form_widget(registerForm.email, {'attr': {'class': 'form-control'}}) }}
					</div>

					<div class="mb-3">
						{{ form_label(registerForm.plainPassword.first) }}
						{{ form_widget(registerForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
					</div>

					<div class="mb-3">
						{{ form_label(registerForm.plainPassword.second) }}
						{{ form_widget(registerForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
					</div>

					<div class="mb-3">
						{{ form_label(registerForm.telephone) }}
						{{ form_widget(registerForm.telephone, {'attr': {'class': 'form-control'}}) }}
					</div>

					<div class="d-grid">
						{{ form_widget(registerForm.submit) }}
					</div>

					{{ form_end(registerForm) }}

					<p class="text-center mt-3">
						Déjà un compte ?
						<a href="{{ path('app_login') }}">Connectez-vous</a>
					</p>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
